@using RS1_Ispit_asp.net_core.ViewModels
@model UrediUcenikaVM
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<form id="forma">
<div class="form-group">
    <label>Ucenik</label>
    <input asp-for="Ucenik" class="form-control"/>

</div>
    <input asp-for="MaturskiIspitStavkaID" hidden />
    <div class="form-group">
        <label>Bodovi</label>
        <input asp-for="Bodovi" class="form-control" />

    </div>
</form>
<button id="snimi" class="btn btn-danger">Snimi</button>

<script>
    $("#snimi").click(function () {

        $.ajax({
            type: "POST",
            url: "/OdrzanaNastava/UrediUcenikaSnimi",
            data: $("#forma").serialize(),
            success: function (result) {

                $("#stavke").html(result);
            }


        })


    });
</script>